#!/bin/bash

NAME=SoleScion
VERSION=`bin/run --version | cut -d' ' -f2`
RELEASE=$NAME-$VERSION
echo $RELEASE

if [ -z $VERSION ];
then
    echo "bad version"
    exit 1
fi

rm -rf "../$RELEASE"
rm -f "../$RELEASE.zip"
svn export https://sole-scion.googlecode.com/svn/trunk ../$RELEASE
( cd ..; zip -r "$RELEASE.zip" "$RELEASE" -x "$RELEASE/screenshots*"; )
rm -rf "../$RELEASE"
